@page "/backups"
@namespace SwashbucklerDiary.WebAssembly.Pages
@inherits BackupsPageBase

<MyAppBar>
    <MButton Icon
             OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MyTabs @bind-Value="tab"
                  Items="tabNames">
    </MyTabs>

    <MSpacer></MSpacer>
</MyAppBar>

<SwiperTabItems @bind-Value="tab">
    <SwiperTabItem>
        <MContainer Class="my-container"
                    Fluid="true">
            <LocalBackupsPage></LocalBackupsPage>
        </MContainer>
    </SwiperTabItem>
    <SwiperTabItem>
        <MContainer Class="my-container"
                    Fluid="true">
            <WebDAVBackupsPage></WebDAVBackupsPage>
        </MContainer>
    </SwiperTabItem>
</SwiperTabItems>

