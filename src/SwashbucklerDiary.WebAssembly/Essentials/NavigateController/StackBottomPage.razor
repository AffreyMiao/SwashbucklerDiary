@namespace SwashbucklerDiary.WebAssembly.Essentials
@page "/stackBottom"

<MDialog Value="true"
         ContentClass="rounded-lg"
         Persistent
         MaxWidth="420">
    <MCard>
        <MCardTitle Class="font-weight-bold">
            @I18n.T("Share.Quit")
        </MCardTitle>
        <MCardText Class="pb-0">
            @I18n.T("Returning again will exit the application")
        </MCardText>
        <MCardActions>
            <MSpacer></MSpacer>
            <MButton Text="true"
                     OnClick="HandleOnCancle">
                @(I18n.T("Share.Cancel"))
            </MButton>
        </MCardActions>
    </MCard>
</MDialog>