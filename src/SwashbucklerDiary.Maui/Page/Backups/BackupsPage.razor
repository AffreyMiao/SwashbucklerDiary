@page "/backups"
@namespace SwashbucklerDiary.Maui.Pages
@inherits BackupsPageBase

<MyAppBar>
    <MButton Icon
             OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MultiTabList @bind-Value="tab"
                  Items="tabNames">
    </MultiTabList>

    <MSpacer></MSpacer>
</MyAppBar>

<SwiperTabItems @bind-Value="tab">
    <SwiperTabItem>
        <MContainer Class="my-container"
                    Fluid="true">
            <LocalBackups></LocalBackups>
        </MContainer>
    </SwiperTabItem>
    <SwiperTabItem>
        <MContainer Class="my-container"
                    Fluid="true">
            <WebDAVBackups></WebDAVBackups>
        </MContainer>
    </SwiperTabItem>
</SwiperTabItems>


