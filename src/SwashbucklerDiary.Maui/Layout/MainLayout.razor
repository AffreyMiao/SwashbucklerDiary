@inherits MainLayoutBase

@if (afterInitSetting)
{
    <MApp>
        <CascadingValue Value="@I18n.Culture.Name" Name="Culture">
            <ErrorBoundary>
                <ChildContent>
                    <FirstLaunchDialog />

                    <MainLayoutNavDrawer Items="NavigationButtons"></MainLayoutNavDrawer>

                    <MMain>
                        <PPageContainerExtension>
                            @Body
                        </PPageContainerExtension>
                    </MMain>

                    <MainLayoutBottomNav Items="NavigationButtons"></MainLayoutBottomNav>
                </ChildContent>

                <ErrorContent>
                    <ErrorDialog></ErrorDialog>
                </ErrorContent>
            </ErrorBoundary>
        </CascadingValue>
    </MApp>
}
