@page "/export"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase


<MyAppBar>
    <MButton Icon
             OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MultiTabList @bind-Value="tab"
                  Items="tabNames">
    </MultiTabList>

    <MSpacer></MSpacer>
</MyAppBar>

<SwiperTabItems @bind-Value="tab">
    <SwiperTabItem>
        <MContainer Class="my-container"
                    Fluid="true">
            <LocalExport></LocalExport>
        </MContainer>
    </SwiperTabItem>
    <SwiperTabItem>
        <MContainer Class="my-container"
                    Fluid="true">
            <LANTransfer></LANTransfer>
        </MContainer>
    </SwiperTabItem>
</SwiperTabItems>

