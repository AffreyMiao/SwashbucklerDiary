@page "/locationSetting"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar Title="@(I18n.T("Setting.Display.Diary.Location.Name"))"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    <LocationCardList Value="locations"></LocationCardList>
</ScrollContainer>

<RightBottomFloatButton Icon="mdi-plus" OnClick="()=>showAdd=true">
</RightBottomFloatButton>

<InputDialog @bind-Visible="showAdd"
             Title="@(I18n.T("Location.Add"))"
             Placeholder="@(I18n.T("Location.Placeholder"))"
             MaxLength="50"
             OnOK="SaveAdd">
</InputDialog>
