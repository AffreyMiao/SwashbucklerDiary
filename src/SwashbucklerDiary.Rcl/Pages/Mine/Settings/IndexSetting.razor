@page "/indexSetting"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar Title="@(I18n.T("Setting.Display.Index.Name"))"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    <MCard Class="my-list-card"
           Elevation="0"
           Rounded="@("lg")">
        <MList>
            <MListItem>
                <MListItemIcon>
                    <MIcon Class="evident-icon">
                        mdi-calendar-range-outline
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n.T("Setting.Display.Index.Date.Name"))
                </MListItemContent>
                <MListItemAction>
                    <SettingSwitch @bind-Value="date"
                                   SettingKey="@nameof(Setting.IndexDate)">
                    </SettingSwitch>
                </MListItemAction>
            </MListItem>
            <MDivider Class="mx-5"></MDivider>
            <MListItem>
                <MListItemIcon>
                    <MIcon Class="evident-icon">
                        mdi-hand-wave-outline
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n.T("Setting.Display.Index.WelcomeText.Name"))
                </MListItemContent>
                <MListItemAction>
                    <SettingSwitch @bind-Value="welcomText"
                                   SettingKey="@nameof(Setting.WelcomeText)">
                    </SettingSwitch>
                </MListItemAction>
            </MListItem>
        </MList>
    </MCard>
</ScrollContainer>
