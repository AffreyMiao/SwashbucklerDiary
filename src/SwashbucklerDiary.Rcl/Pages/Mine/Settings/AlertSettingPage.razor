@page "/alertSetting"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar Title="@(I18n.T("Setting.Display.Snackbars.Name"))"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    <MCard Class="list-item-card"
           Elevation="0"
           Rounded="@("lg")">
        <MListItem OnClick="()=>showTimeout=true">
            <MListItemIcon>
                <MIcon Class="evident-icon">
                    mdi-timer-outline
                </MIcon>
            </MListItemIcon>
            <MListItemContent>
                @(I18n.T("Setting.Display.Snackbars.AlertTimeout.Name"))
            </MListItemContent>
            <MListItemContent Class="setting-state">
                <MListItemSubtitle>
                    @(Timeout.ToString() + "s")
                </MListItemSubtitle>
            </MListItemContent>
            <MListItemAction>
                <MIcon>mdi-chevron-right</MIcon>
            </MListItemAction>
        </MListItem>
    </MCard>

    <MCard Class="list-item-card"
           Elevation="0"
           Rounded="@("lg")">
        <MListItem>
            <MListItemIcon>
                <MIcon Class="evident-icon">
                    mdi-trophy-outline
                </MIcon>
            </MListItemIcon>
            <MListItemContent>
                @(I18n.T("Setting.Display.Snackbars.Achievement.Name"))
            </MListItemContent>
            <MListItemAction>
                <MSwitch @bind-Value="achievementsAlert"
                         TValue="bool"
                         OnChange="SettingChange(Setting.AchievementsAlert)"
                         Dense="true"
                         Inset="true"
                         Color="white">
                </MSwitch>
            </MListItemAction>
        </MListItem>
    </MCard>

</ScrollContainer>

<SelectChipDialog @bind-Visible="showTimeout"
              @bind-Value="@Timeout"
              Title="@(I18n.T("Setting.Display.Snackbars.AlertTimeout.Name"))"
              Items="timeoutItems"
              Mandatory="true">
</SelectChipDialog>
