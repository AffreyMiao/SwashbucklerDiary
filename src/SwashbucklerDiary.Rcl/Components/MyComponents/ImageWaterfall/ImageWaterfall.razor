@namespace SwashbucklerDiary.Rcl.Components
@inherits MyComponentBase


<div>
    <wc-waterfall @ref="elementReference" gap="@Gap" cols="@Cols">
        @foreach (var src in imageSrcs)
        {
            <img @key="src" class="image-card rounded-lg" src="@src" />
        }
    </wc-waterfall>

    @if (imageSrcs.Count > 0)
    {
        <MInfiniteScroll Style="width:100%;"
                         OnLoad="@OnLoad"
                         Parent="ScrollElement"
                         EmptyText="@(string.Empty)"
                         LoadingText="@(string.Empty)">
            <LoadMoreContent Context="load">
                <div class="@(ShowLoadMore?"":"d-none")">
                    <MButton Icon="true"
                             OnClick="@load">
                        <MIcon>mdi-reload</MIcon>
                    </MButton>
                </div>
            </LoadMoreContent>
        </MInfiniteScroll>
    }

</div>

<EmptyResult Show="Value.Count == 0"
              Text="@(I18n.T("Setting.Display.Diary.Image.NoImage"))">
</EmptyResult>

<PreviewImageDialog @bind-Visible="showPreviewImage"
                    Src="@previewImageSrc">
</PreviewImageDialog>
