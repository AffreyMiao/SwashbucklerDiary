@namespace SwashbucklerDiary.Rcl.Components
@inherits OpenCloseComponentBase

@if (ShowTitle && !Visible)
{
    <MToolbarTitle Class="font-weight-bold">
        @Title
    </MToolbarTitle>
    <MSpacer></MSpacer>
}
else
{
    <MTextField TValue="string"
                Value="Value"
                ValueChanged="InternalValueChanged"
                OnInput="OnInput"
                Class="rounded-lg"
                BackgroundColor="transparent"
                Solo="true"
                Flat="true"
                Autofocus="true"
                Clearable="true"
                HideDetails="@("auto")"
                Color="@TextFieldColor"
                spellcheck="false"
                Placeholder="@(Placeholder ?? I18n.T("Search.Please enter keywords"))">
    </MTextField>
}
