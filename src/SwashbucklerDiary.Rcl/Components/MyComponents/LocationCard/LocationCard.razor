@namespace SwashbucklerDiary.Rcl.Components
@inherits CardComponentBase<LocationModel>

<MCard Class="mb-5 my-tag-card elevation-sm-2--active"
       Elevation="0"
       Ripple="false"
       Rounded="@("lg")">
    <MListItem>
        <MListItemIcon>
            <MIcon Class="list-item-icon">
                mdi-map-marker-outline
            </MIcon>
        </MListItemIcon>
        <MListItemContent>
            <MListItemTitle>
                @(Value.Name)
            </MListItemTitle>
        </MListItemContent>
        <MListItemAction @onclick:stopPropagation="true">
            <MButton @attributes="@activatorAttributes"
                     Icon="true"
                     Small="true"
                     OnClick="OpenMenu">
                <MIcon>mdi-pencil-outline</MIcon>
            </MButton>
        </MListItemAction>
    </MListItem>
</MCard>
