@namespace SwashbucklerDiary.Rcl.Components
@inherits DialogComponentBase

<MDialogExtension MyValue="Visible"
                  MyValueChanged="InternalVisibleChanged"
                  ContentClass="rounded-lg"
                  MaxWidth="420"
                  Scrollable="true"
                  OnBeforeShowContent="BeforeShowContent">
    <MCard>
        <MCardTitle Class="font-weight-bold">
            @(I18n.T("Location.Select"))
            <MSpacer></MSpacer>
            <MButton Icon
                     OnClick="()=>showSearch=!showSearch">
                <MIcon>mdi-magnify</MIcon>
            </MButton>
            <MButton Icon
                     OnClick="HandleOnCancel">
                <MIcon>mdi-close</MIcon>
            </MButton>
        </MCardTitle>

        <MCardText Class="pb-0">
            @if (showSearch)
            {
                <MTextFieldExtension @bind-Value="searchText"
                                     Class="mb-2"
                                     Dense
                                     TValue="string"
                                     Filled
                                     Rounded
                                     Clearable
                                     Color="@Color"
                                     HideDetails="@("auto")"
                                     spellcheck="false"
                                     Placeholder="@(I18n.T("Share.Search"))"
                                     PrependInnerIcon="mdi-magnify">
                </MTextFieldExtension>
            }
            <div class="scroll-show" style="max-height:300px;">
                <Virtualize Items="FilterLocations"
                            ItemSize="56"
                            Context="item">
                    <MListItem @key="item.Id"
                               Class="mb-1 rounded"
                               OnClick="()=>SetSelectedLocation(item)">
                        <MListItemContent>
                            @(item.Name)
                        </MListItemContent>

                        <MListItemAction>
                            @if (item.Name == selectedLocation)
                            {
                                <MIcon>
                                    mdi-check
                                </MIcon>
                            }
                        </MListItemAction>
                    </MListItem>
                </Virtualize>
            </div>
        </MCardText>
        <MCardActions>
            <MButton Text="true"
                     OnClick="()=>showAdd = true">
                @(I18n.T("Share.Add"))
            </MButton>
            <MSpacer></MSpacer>
            <MButton Text="true"
                     OnClick="HandleOnCancel">
                @(I18n.T("Share.Cancel"))
            </MButton>
            <MButton Text="true"
                     Color="primary"
                     OnClick="HandleOnOK">
                @(I18n.T("Share.Save"))
            </MButton>
        </MCardActions>
    </MCard>
</MDialogExtension>

<InputDialog @bind-Visible="showAdd"
             Title="@(I18n.T("Location.Add"))"
             Placeholder="@(I18n.T("Location.Placeholder"))"
             MaxLength="200"
             OnOK="SaveAdd">
</InputDialog>