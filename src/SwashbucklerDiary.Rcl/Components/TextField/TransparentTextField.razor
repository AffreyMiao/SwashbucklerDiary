@namespace SwashbucklerDiary.Rcl.Components

<MTextFieldExtension TValue="string"
                     Value="@Value"
                     ValueChanged="ValueChanged"
                     OnInput="OnInput"
                     Class="rounded-lg"
                     BackgroundColor="transparent"
                     Solo="true"
                     Flat="true"
                     Autofocus="true"
                     Clearable="Clearable"
                     HideDetails="@("auto")"
                     Color="@TextFieldColor"
                     spellcheck="false"
                     Placeholder="@(Placeholder ?? I18n.T("Search.Please enter keywords"))">
</MTextFieldExtension>
