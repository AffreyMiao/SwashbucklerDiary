@namespace SwashbucklerDiary.Rcl.Components
@inherits OpenCloseComponentBase

@if (Visible)
{
    <MyAppBar>
        <TransparentTextField Value="@Value"
                              ValueChanged="HandleValueChanged"
                              OnInput="HighlightSearch"
                              Clearable="false"
                              Autofocus="Autofocus"
                              Placeholder="@I18n.T("Look it up on the page")">
        </TransparentTextField>
        @if (!string.IsNullOrWhiteSpace(Value))
        {
            <div class="px-3">@(CurrentNumber)/@(Count)</div>
        }
        <MButton Icon="true"
                 OnClick="Up">
            <MIcon>
                mdi-chevron-up
            </MIcon>
        </MButton>
        <MButton Icon="true"
                 OnClick="Down">
            <MIcon>
                mdi-chevron-down
            </MIcon>
        </MButton>
        <MButton Icon="true"
                 OnClick="()=>InternalVisibleChanged(false)">
            <MIcon>
                mdi-close
            </MIcon>
        </MButton>
    </MyAppBar>
}
