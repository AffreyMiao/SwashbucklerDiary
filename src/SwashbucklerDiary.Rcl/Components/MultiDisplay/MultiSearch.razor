@namespace SwashbucklerDiary.Rcl.Components
@inherits ImportantComponentBase

<MultiDisplay MdAndUp="true">
    <MobileContent>
        <MButton Large="true"
                 Icon="true"
                 OnClick="Search">
            <MIcon>mdi-magnify</MIcon>
        </MButton>
    </MobileContent>
    <DesktopContent>
        <MTextField @bind-Value="SearchContent"
                    Class="rounded-pill second-background"
                    Style="max-width:200px;"
                    TValue="string"
                    Solo="true"
                    Flat="true"
                    Dense="true"
                    HideDetails="@("auto")"
                    AppendIcon="mdi-magnify"
                    OnAppendClick="Search"
                    OnKeyDown="HandleOnEnter">
        </MTextField>
    </DesktopContent>
</MultiDisplay>
