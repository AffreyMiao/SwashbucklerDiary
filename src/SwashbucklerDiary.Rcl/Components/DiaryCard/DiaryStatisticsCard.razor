@namespace SwashbucklerDiary.Rcl.Components

<MCard Class="pa-4"
       Elevation="0"
       Rounded="@("lg")">
    <MListItem Dense="true">
        <MListItemContent Class="font-weight-bold">
            @(I18n.T("Statistics.Name"))
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Statistics.DiaryCount")): @(DiaryCount)
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Statistics.WordCount")): @(WordCount)
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Statistics.ActiveDayCount")): @(ActiveDayCount)
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            <span>
                @(I18n.T("Statistics.MostWeather")):
                <MIcon Class="mx-1" Size="20">
                    @(MostWeatherIcon)
                </MIcon>
                @(MostWeatherText)
            </span>
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            <span>
                @(I18n.T("Statistics.MostMood")):
                <MIcon Class="mx-1" Size="20">
                    @(MostMoodIcon)
                </MIcon>
                @(MostMoodText)
            </span>
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Statistics.EarliestDate")): @(EarliestDate)
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Statistics.LastDate")): @(LastDate)
        </MListItemContent>
    </MListItem>
</MCard>
