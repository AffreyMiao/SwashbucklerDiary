@namespace SwashbucklerDiary.Rcl.Components
@inherits MyComponentBase

<MCard Class="pa-4"
       Elevation="0"
       Rounded="@("lg")">
    <MListItem Dense="true">
        <MListItemContent Class="font-weight-bold">
            @(I18n.T("Statistics"))
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Location count")): @(LocationCount)
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Earliest date")): @(EarliestDate)
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Last date")): @(LastDate)
        </MListItemContent>
    </MListItem>
</MCard>
