@namespace SwashbucklerDiary.Rcl.Layout
@inherits MainLayoutNavBase

<MNavigationDrawer App="true"
                   Value="Show"
                   Stateless="true"
                   MiniVariant="true"
                   MiniVariantWidth="76">
    <MList Nav>
        @foreach (var item in Items)
        {
            <MainLayoutNavDrawerItem @key="item"
                                     Value="item">
            </MainLayoutNavDrawerItem>
        }
    </MList>
</MNavigationDrawer>

@code {
    private bool Show => MasaBlazor.Breakpoint.SmAndUp && IsRootPath;
}