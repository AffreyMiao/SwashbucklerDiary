@inherits LayoutComponentBase

<MApp>
    <ErrorBoundary>
        <ChildContent>
            <FirstLaunchDialog />
            <MainNavigationDrawer @bind-Value="SelectedItemIndex"
                                  Items="NavigationButtons">
            </MainNavigationDrawer>
            <MMain>
                <CascadingValue Value="@this">
                    @Body
                </CascadingValue>
            </MMain>
            <MainBottomNavigation @bind-Value="SelectedItemIndex"
                                  Items="NavigationButtons">
            </MainBottomNavigation>
            <MOverlay Value="ShowLoading"
                      ZIndex="99">
                <MProgressCircular Indeterminate="true"
                                   Size="48">
                </MProgressCircular>
            </MOverlay>
        </ChildContent>
        <ErrorContent>
            <ErrorDialog></ErrorDialog>
        </ErrorContent>
    </ErrorBoundary>
</MApp>
