@inherits LayoutComponentBase

<MApp>
    <ErrorBoundary>
        <ChildContent>
            <FirstLaunchDialog />

            <MainNavigationDrawer @bind-Value="NavigationIndex"
                                  Items="NavigationButtons">
            </MainNavigationDrawer>

            <MMain>
                <PPageContainerExtension>
                    <CascadingValue Value="@_options"
                                    IsFixed="true">
                        @Body
                    </CascadingValue>
                </PPageContainerExtension>
            </MMain>
        </ChildContent>

        <ErrorContent>
            <ErrorDialog></ErrorDialog>
        </ErrorContent>
    </ErrorBoundary>
</MApp>
