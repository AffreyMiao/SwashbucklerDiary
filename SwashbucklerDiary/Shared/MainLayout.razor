@inherits LayoutComponentBase

<ErrorBoundary>
    <ChildContent>
        <MApp Dark="Dark">
            @if (ShowFirstLaunch)
            {
                <FirstLaunchDialog @bind-Value="ShowFirstLaunch"></FirstLaunchDialog>
            }
            else
            {
                <MMain Style="@MainStyle">
                    @if (MasaBlazor.Breakpoint.SmAndUp)
                    {
                        <MainNavigationDrawer @bind-Value="SelectedItemIndex"
                                      Items="NavigationButtons"
                                      MiniVariant="Mini">
                        </MainNavigationDrawer>
                    }
                    @Body
                </MMain>
                @if (ShowBottomNavigation)
                {
                    <MainBottomNavigation @bind-Value="SelectedItemIndex"
                                  InputValue="ShowBottomNavigation"
                                  Items="NavigationButtons">
                    </MainBottomNavigation>
                }
            }
        </MApp>
    </ChildContent>
    <ErrorContent>
        <ErrorDialog></ErrorDialog>
    </ErrorContent>
</ErrorBoundary>