@namespace SwashbucklerDiary.Components
@inherits MyComponentBase

<MListItem @oncontextmenu="()=>ShowMenu=true">
    <MListItemIcon>
        <MIcon Class="list-item-icon">
            mdi-map-marker-outline
        </MIcon>
    </MListItemIcon>
    <MListItemContent>
        <MListItemTitle>
            @(Value?.Name)
        </MListItemTitle>
    </MListItemContent>
    <MListItemAction>
        <MultiMenu @bind-Value="ShowMenu" ListItemModels="ListItemModels">
            <ButtonContent>
                <MIcon>mdi-pencil</MIcon>
            </ButtonContent>
        </MultiMenu>
    </MListItemAction>
</MListItem>