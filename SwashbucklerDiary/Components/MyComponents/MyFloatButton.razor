@namespace SwashbucklerDiary.Components

<FabTransition>
    <MButton Class="my-btn-fab elevation-2"
             Bottom="true"
             Right="true"
             Fixed="true"
             Fab="true"
             OnClick="OnClick">
        <MIcon>
            @Icon
        </MIcon>
    </MButton>
</FabTransition>

@code {
    [Parameter]
    public string? Icon { get; set; }
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
}
