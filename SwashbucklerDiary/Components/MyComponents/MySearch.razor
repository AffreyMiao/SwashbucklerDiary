@namespace SwashbucklerDiary.Components
@inherits DialogComponentBase

@if (ShowTitle && !Value)
{
    <MToolbarTitle Class="font-weight-bold">
        @Title
    </MToolbarTitle>
    <MSpacer></MSpacer>
}
else
{
    <MTextField TValue="string"
                Value="Search"
                ValueChanged="InternalSearchChanged"
                Class="rounded-lg"
                Solo="true"
                Flat="true"
                Autofocus="true"
                Clearable="true"
                HideDetails="@("auto")"
                Color="@TextFieldColor"
                spellcheck="false"
                Placeholder="@(Placeholder ?? I18n.T("Search.Please enter keywords"))">
    </MTextField>
}
