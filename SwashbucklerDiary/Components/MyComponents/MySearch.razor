@namespace SwashbucklerDiary.Components
@inherits DialogComponentBase

@if (ShowTitle && !Value)
{
    <MToolbarTitle Class="font-weight-bold">
        @Title
    </MToolbarTitle>
    <MSpacer></MSpacer>
}
else
{
    <MTextField TValue="string"
            Value="Search"
            ValueChanged="InternalSearchChanged"
            Class="ml-3 rounded-lg"
            Solo="true"
            Flat="true"
            Autofocus="true"
            Clearable="true"
            HideDetails="@("auto")"
                spellcheck="false"
            Placeholder="@(I18n.T("Search.Placeholder"))">
    </MTextField>
}
