@namespace SwashbucklerDiary.Components
@inherits DialogComponentBase

<MultiDisplay OnUpdate="UpdateDisplay">
    <MobileContent>
        <PMobileDatePickerExtension MyVisible="Value"
                            MyVisibleChanged="ValueChanged"
                            Value="Date"
                            ValueChanged="DateChanged"
                            Min="Min??default"
                            Max="Max??default">
        </PMobileDatePickerExtension>
    </MobileContent>
    <DesktopContent>
        <MyDatePicker Value="Value"
                      ValueChanged="ValueChanged"
                      Date="Date"
                      DateChanged="DateChanged"
                      Min="Min"
                      Max="Max">
        </MyDatePicker>
    </DesktopContent>
</MultiDisplay>