@inherits MyComponentBase

<MCard Class="mb-5 tag-card"
       Ripple="false"
       Rounded="@("lg")"
       OnClick="OnClick">
    <MListItem>
        <MListItemIcon>
            <MIcon>
                mdi-label-outline
            </MIcon>
        </MListItemIcon>

        <MListItemContent>
            @(Value!.Name)
        </MListItemContent>

        <MListItemAction>
            <div @onclick:stopPropagation="true">
                <MyMenu @bind-Value="ShowMenu" ViewListItems="ViewListItems">
                    <ButtonContent>
                        <MIcon>mdi-pencil</MIcon>
                    </ButtonContent>
                </MyMenu>
            </div>
        </MListItemAction>
    </MListItem>
</MCard>
