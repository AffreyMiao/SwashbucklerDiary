@page "/"
@inherits PageComponentBase

<MAppBar App
         Elevation="0">
    <MTabs @bind-Value="tab"
           ActiveClass="text-h6 font-weight-bold"
           HideSlider>
        <MTab Class="m-tab-swiper"
              Ripple="false">
            @(I18n.T("Index.All"))
        </MTab>
        <MTab Class="m-tab-swiper"
              Ripple="false">
            @(I18n.T("Index.Tag"))
        </MTab>
    </MTabs>
    <MSpacer></MSpacer>
    <MButton Large Icon OnClick="@(()=>To("/search"))">
        <MIcon>mdi-magnify</MIcon>
    </MButton>
</MAppBar>

<SwiperTabItems @bind-Value="tab">
    <SwiperTabItem>
        <div class="mb-5 px-2">
            <MSubheader Class="px-0">
                @(DateTime.Now.ToString("yyyy/MM/dd") + " " + I18n.ToWeek())
            </MSubheader>
            <div class="text-h6 font-weight-bold">
                @GetWelcomeText()
            </div>
        </div>

        <DiaryCardList Value="Diaries" @bind-Tags="Tags"></DiaryCardList>
    </SwiperTabItem>
    <SwiperTabItem>
        <TagCardList @bind-Value="Tags"></TagCardList>
    </SwiperTabItem>
</SwiperTabItems>

@if (tab == 0)
{
    <FabTransition>
        <MButton Class="mb-15 mb-sm-0 icon-btn"
             Bottom
             Right
             Fixed
             OnClick="@(()=>To("/write"))"
             Fab>
            <MIcon>
                mdi-pencil
            </MIcon>
        </MButton>
    </FabTransition>
}

@if (tab == 1)
{
    <FabTransition>
        <MButton Class="mb-15 mb-sm-0 icon-btn"
             Bottom
             Right
             Fixed
             OnClick="()=>ShowAddTag=true"
             Fab>
            <MIcon>
                mdi-plus
            </MIcon>
        </MButton>
    </FabTransition>
}

<InputDialog @bind-Value="ShowAddTag"
             Title="@(I18n.T("Tag.Add"))"
             Placeholder="@(I18n.T("Tag.Placeholder"))"
             OnOK="SaveAddTag">
</InputDialog>