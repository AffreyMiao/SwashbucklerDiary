@page "/history"
@inherits DiariesPageComponentBase

<link href="css/extend/masa-blazor-extend-enqueued-snackbars.css" rel="stylesheet" />

<MAppBar App="true"
         Elevation="0">
    <MToolbarTitle Class="font-weight-bold">
        @(I18n.T("History.Calendar"))
    </MToolbarTitle>
</MAppBar>

<ScrollContainer>
    <MDatePicker @bind-Value="PickedDate"
                 Class="rounded-lg my-picker mb-5 pt-4"
                 TValue="DateOnly"
                 ShowCurrent="false"
                 FullWidth="true"
                 NoTitle="true"
                 Color="primary"
                 AllowedDates="AllowedDates"
                 Events="AllowedDates"
                 EventColor='"primary"'
                 Locale="@(I18n.Culture.Name)">
    </MDatePicker>
    <DiaryCardList Value="CalendarDiaries"
                   @bind-Tags="Tags"
                   OnDeleted="Update">
    </DiaryCardList>
</ScrollContainer>

