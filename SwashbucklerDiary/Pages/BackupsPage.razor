@page "/backups"
@inherits PageComponentBase

<MAppBar App="true"
         Elevation="0">
    <MButton Icon OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>
    <MTabs @bind-Value="tabs"
           ActiveClass="text-h6 font-weight-bold"
           HideSlider="true">
        <MTab Class="m-tab-swiper"
              Ripple="false">
            @(I18n.T("Backups.Local"))
        </MTab>
        <MTab Class="m-tab-swiper"
              Ripple="false">
            @(I18n.T("Backups.WebDAV"))
        </MTab>
    </MTabs>
    <MSpacer></MSpacer>
</MAppBar>

<SwiperTabItems @bind-Value="tabs">
    <SwiperTabItem>
        <BackupsLocal></BackupsLocal>
    </SwiperTabItem>
    <SwiperTabItem>
        <BackupsWebDAV></BackupsWebDAV>
    </SwiperTabItem>
</SwiperTabItems>


