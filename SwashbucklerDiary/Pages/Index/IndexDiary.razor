@namespace SwashbucklerDiary.Pages
@inherits IndexPageCompentBase

<MyAppBar>
    <MTabs @bind-Value="tab"
           ActiveClass="text-h6 font-weight-bold"
           HideSlider>
        <MTab Class="my-tab"
              Ripple="false">
            @(I18n.T("Index.All"))
        </MTab>
        <MTab Class="my-tab"
              Ripple="false">
            @(I18n.T("Index.Tag"))
        </MTab>
    </MTabs>

    <MSpacer></MSpacer>

    <MultiSearchControl OnSearch="Search">
    </MultiSearchControl>

</MyAppBar>


<SwiperTabItems @bind-Value="tab">
    <SwiperTabItem>
        <div class="pl-2">
            @if (ShowDate)
            {
                <div class="text--secondary mb-2">
                    @(DateTime.Now.ToString("yyyy/MM/dd") + " " + I18n.ToWeek())
                </div>
            }

            @if (ShowWelcomeText)
            {
                <div class="text-h6 mb-5">
                    @GetWelcomeText()
                </div>
            }
                 
        </div>

        <DiaryCardList Tags="Tags"
                       TagsChanged="TagsChanged"
                       Value="Diaries">
        </DiaryCardList>
    </SwiperTabItem>
    <SwiperTabItem>
        <TagCardList Value="Tags"
                     ValueChanged="TagsChanged"
                     Diaries="Diaries">
        </TagCardList>
    </SwiperTabItem>
</SwiperTabItems>

@if (tab == 0)
{
    <MyFloatButton Icon="mdi-pencil"
                   OnClick="@(()=>To("write",false))">
    </MyFloatButton>
}

@if (tab == 1)
{
    <MyFloatButton Icon="mdi-plus"
                   OnClick="()=>ShowAddTag=true">
    </MyFloatButton>
}

<InputDialog @bind-Value="ShowAddTag"
             Title="@(I18n.T("Tag.Add"))"
             Placeholder="@(I18n.T("Tag.Placeholder"))"
             OnOK="SaveAddTag">
</InputDialog>