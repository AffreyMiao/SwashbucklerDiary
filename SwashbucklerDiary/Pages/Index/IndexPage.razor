@page "/"
@namespace SwashbucklerDiary.Pages
@inherits DiariesPageComponentBase

<OnlyThisPageDisplay>
    <link href="css/extend/masa-blazor-extend-enqueued-snackbars.css" rel="stylesheet" />
</OnlyThisPageDisplay>

<MWindow Value="NavigationIndex"
         Style="height:100%;">
    <MWindowItem Style="height:100%;"
                 Eager="true"
                 Transition="">
        <IndexDiary @ref="IndexDiary"
                    @bind-Tags="Tags"
                    Diaries="Diaries">
        </IndexDiary>
    </MWindowItem>
    <MWindowItem Style="height:100%;"
                 Eager="true"
                 Transition="">
        <IndexHistory @ref="IndexHistory"
                      @bind-Tags="Tags"
                      Diaries="Diaries">
        </IndexHistory>
    </MWindowItem>
    <MWindowItem Style="height:100%;"
                 Eager="true"
                 Transition="">
        <IndexMine @ref="IndexMine"
                   Diaries="Diaries">
        </IndexMine>
    </MWindowItem>
</MWindow>

<IndexBottomNavigation @bind-Value="NavigationIndex"
                       Items="NavigationButtons">
</IndexBottomNavigation>