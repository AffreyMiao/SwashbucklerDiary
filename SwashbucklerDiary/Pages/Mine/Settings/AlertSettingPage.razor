@page "/alertSetting"
@namespace SwashbucklerDiary.Pages
@inherits PageComponentBase

<MyAppBar Title="@(I18n.T("Setting.Display.Alert.Name"))"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    <MCard Class="setting-card"
           Elevation="0"
           Rounded="@("lg")">
        <MList>
            <MListItem OnClick="()=>ShowTimeout=true">
                <MListItemIcon>
                    <MIcon Class="list-item-icon">
                        mdi-timer-outline
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n.T("Alert.AlertTimeout"))
                </MListItemContent>
                <MListItemContent Class="setting-state">
                    <MListItemSubtitle>
                        @(Timeout.ToString() + "s")
                    </MListItemSubtitle>
                </MListItemContent>
                <MListItemAction>
                    <MIcon>mdi-chevron-right</MIcon>
                </MListItemAction>
            </MListItem>
        </MList>
    </MCard>

</ScrollContainer>

<SelectIconDialog @bind-Value="ShowTimeout"
@bind-Item="@Timeout"
                  Title="@(I18n.T("Alert.AlertTimeout"))"
                  Items="Timeouts"
                  Text="@(item=>item.Key + "s")">
</SelectIconDialog>
