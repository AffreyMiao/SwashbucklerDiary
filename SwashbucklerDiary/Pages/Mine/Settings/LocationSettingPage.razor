@page "/pppp"
@namespace SwashbucklerDiary.Pages
@inherits ImportantComponentBase

<MyAppBar>
    <MButton Icon="true"
             OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MToolbarTitle Class="font-weight-bold">
        @(I18n.T("Setting.Display.Diary.Location.Name"))
    </MToolbarTitle>

    <MSpacer></MSpacer>

    <MButton Icon="true"
             OnClick="()=>ShowSort=true">
        <MIcon>
            mdi-sort-variant
        </MIcon>
    </MButton>
</MyAppBar>

<ScrollContainer>
    <LocationCardList @bind-ShowSort="ShowSort"
                      Value="Locations">
    </LocationCardList>
</ScrollContainer>

<MyFloatButton Icon="mdi-plus" OnClick="()=>ShowAdd=true">
</MyFloatButton>

<InputDialog @bind-Value="ShowAdd"
             Title="@(I18n.T("Location.Add"))"
             Placeholder="@(I18n.T("Location.Placeholder"))"
             OnOK="SaveAdd">
</InputDialog>
