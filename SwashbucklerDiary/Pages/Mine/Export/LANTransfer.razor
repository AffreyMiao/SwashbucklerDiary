@namespace SwashbucklerDiary.Pages
@inherits PageComponentBase

<MCard Elevation="0"
       Rounded="@("lg")">
    <MList>
        @foreach (var item in DynamicLists)
        {
            <MListItem OnClick="item.OnClick">
                <MListItemIcon>
                    <MIcon Class="list-item-icon">
                        @item.Icon
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>
                        @(I18n.T(item.Text))
                    </MListItemTitle>
                </MListItemContent>
                <MListItemAction>
                    <MIcon>mdi-chevron-right</MIcon>
                </MListItemAction>
            </MListItem>

            if (DynamicLists.Last() != item)
            {
                <MDivider Class="mx-3"></MDivider>
            }
        }
    </MList>
</MCard>

<LANConfigDialog @bind-Value="ShowConfig"
                 Form="configModel"
                 OnOK="SaveConfig"
                 OnReset="Reset">
</LANConfigDialog>