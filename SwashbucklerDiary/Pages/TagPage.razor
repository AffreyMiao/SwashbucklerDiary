@page "/tag/{id:guid}"
@inherits DiariesPageComponentBase

<MyAppBar Title="@(Tag.Name)"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    <DiaryCardList @bind-Tags="Tags"
                   Value="Diaries" />
</ScrollContainer>

<FabTransition>
    <MButton Color="black"
             Class="mb-15 mb-sm-0"
             Dark
             Bottom
             Right
             Fixed
             OnClick="NavigateToWrite"
             Fab>
        <MIcon>
            mdi-pencil
        </MIcon>
    </MButton>
</FabTransition>