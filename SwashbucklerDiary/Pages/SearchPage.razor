@page "/search"
@inherits PageComponentBase

<MAppBar App
         ElevateOnScroll
         ScrollTarget="#scrolling-search">
    <MButton Icon OnClick="NavigateToBack">
        <MIcon>mdi-arrow-left</MIcon>
    </MButton>

    <MTextField TValue="string"
                Value="Search"
                ValueChanged="TextChanged"
                Class="ml-3"
                Solo
                Flat
                Autofocus
                Clearable
                HideDetails="@("auto")"
                spellcheck="false"
                Placeholder="@(I18n.T("Search.Placeholder"))">
    </MTextField>

</MAppBar>
<ScrollContainer Id="scrolling-search">
    <DiaryCardList Value="Diaries"></DiaryCardList>
</ScrollContainer>


