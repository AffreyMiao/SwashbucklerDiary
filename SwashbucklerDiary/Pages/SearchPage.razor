@page "/search"
@inherits DiariesPageComponentBase

<MAppBar App Elevation="0">
    <MButton Icon OnClick="NavigateToBack">
        <MIcon>mdi-arrow-left</MIcon>
    </MButton>

    <MTextField TValue="string"
                Value="Search"
                ValueChanged="TextChanged"
                Class="ml-3"
                Solo
                Flat
                Autofocus
                Clearable
                HideDetails="@("auto")"
                spellcheck="false"
                Placeholder="@(I18n.T("Search.Placeholder"))">
    </MTextField>

</MAppBar>
<ScrollContainer Id="scrolling-search">
    <DiaryCardList Value="Diaries" @bind-Tags="Tags"></DiaryCardList>
</ScrollContainer>


