@page "/tag/{id:int}"
@inherits PageComponentBase

<MAppBar App
         Color="white"
         ElevateOnScroll
         Prominent="Prominent"
         ScrollTarget="#scrolling-tag">
    <MButton Icon OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MAppBarTitle Class="font-weight-bold">
        @Tag.Name
    </MAppBarTitle>

    <MSpacer></MSpacer>
</MAppBar>

<ScrollContainer Id="scrolling-tag">
    <DiaryCardList Value="Diaries" />
</ScrollContainer>

<FabTransition>
    <MButton Color="black"
             Class="mb-15 mb-sm-0"
             Dark
             Bottom
             Right
             Fixed
             OnClick="NavigateToWrite"
             Fab>
        <MIcon>
            mdi-pencil
        </MIcon>
    </MButton>
</FabTransition>