@page "/Tag/{id:int}"

<MAppBar App
         Color="white"
         ElevateOnScroll
         Prominent="Prominent"
         ScrollTarget="#scrolling-tag">
    <MButton Icon OnClick="HandOnBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MAppBarTitle Class="font-weight-bold">
        @Tag.Name
    </MAppBarTitle>

    <MSpacer></MSpacer>
</MAppBar>

<ScrollContainer Id="scrolling-tag">
    <MContainer>
        <DiaryCardList Value="Diaries">

        </DiaryCardList>
    </MContainer>
</ScrollContainer>

<FabTransition>
    <MButton Color="black"
             Class="mb-15 mb-sm-0"
             Dark
             Bottom
             Right
             Fixed
             OnClick="HandOnToWrite"
             Fab>
        <MIcon>
            mdi-pencil
        </MIcon>
    </MButton>
</FabTransition>