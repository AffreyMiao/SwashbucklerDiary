@page "/relatedOSP"
@inherits PageComponentBase

<MAppBar App
         Color="white"
         Elevation="0">
    <MButton Icon OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MAppBarTitle Class="font-weight-bold">
        @(I18n!.T("About.Related"))
    </MAppBarTitle>

    <MSpacer></MSpacer>
</MAppBar>

<MContainer>
    @foreach (var item in OSPs)
    {
        <MCard Class="mb-5"
           Elevation="4"
           Rounded="@("lg")"
           OnClick="()=>OpenBrowser(item.Url)">
           <MList TwoLine>
               <MListItem>
                   <MListItemContent>
                       <MListItemTitle Class="font-weight-bold">
                            @(item.Name)
                       </MListItemTitle>
                       <MListItemSubtitle>
                            @(item.License)
                       </MListItemSubtitle>
                        <MListItemSubtitle>
                            @(item.Url)
                        </MListItemSubtitle>
                   </MListItemContent>
                    <MListItemAction>
                        <MIcon>mdi-chevron-right</MIcon>
                    </MListItemAction>
               </MListItem>
           </MList>
        </MCard>
    }
</MContainer>