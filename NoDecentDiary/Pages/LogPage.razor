@page "/log"
@inherits PageComponentBase

<MAppBar App
         ElevateOnScroll
         Color="white"
         ScrollTarget="#scrolling-log">
    <MButton Icon OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MToolbarTitle>
        @(I18n.T("About.LogFile"))
    </MToolbarTitle>

    <MSpacer></MSpacer>
</MAppBar>
<ScrollContainer Id="scrolling-log">
    <MList Dense>
        @foreach (var item in LogTextList)
        {
            <MListItem>
                <MListItemContent>
                    @item
                </MListItemContent>
            </MListItem>
        }
    </MList>
</ScrollContainer>

