@page "/log"
@inherits PageComponentBase

<MAppBar App
         ElevateOnScroll
         Color="white"
         ScrollTarget="#scrolling-log">
    <MButton Icon OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MToolbarTitle>查看日志文件</MToolbarTitle>

    <MSpacer></MSpacer>
</MAppBar>
<ScrollContainer Id="scrolling-log">
    <MContainer>
        <MList Dense>
            @foreach (var item in LogTextList)
            {
                <MListItem>
                    <MListItemContent>
                        @item
                    </MListItemContent>
                </MListItem>
            }
        </MList>
    </MContainer>
</ScrollContainer>

