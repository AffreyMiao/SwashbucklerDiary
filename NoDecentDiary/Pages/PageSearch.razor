@page "/Search"

<MAppBar App
         Color="white"
         ElevateOnScroll
         ScrollTarget="#scrolling-search">
    <MButton Icon OnClick="HandOnBack">
        <MIcon>mdi-arrow-left</MIcon>
    </MButton>

    <MTextField TValue="string"
                Value="Search"
                ValueChanged="HandOnTextChanged"
                Solo
                Flat
                Autofocus
                Clearable
                HideDetails="@("auto")"
                spellcheck="false"
                Placeholder="@(I18n!.T("Search.Placeholder"))">
    </MTextField>

</MAppBar>
<ScrollContainer Id="scrolling-search">
    <MContainer>
        <DiaryCardList Value="Diaries"></DiaryCardList>
    </MContainer>
</ScrollContainer>


