@page "/"

<MAppBar App
         Elevation="0"
         Color="white">
    <MTabs @bind-Value="tabs"
           ActiveClass="text-h6 font-weight-bold"
           HideSlider
           Color="black">
        <MTab Class="m-tab-swiper">全部</MTab>
        <MTab Class="m-tab-swiper">标签</MTab>
    </MTabs>
    <MSpacer></MSpacer>
    <MButton Large Icon>
        <MIcon>mdi-magnify</MIcon>
    </MButton>
</MAppBar>

<SwiperTabItems @bind-Value="tabs">
    <SwiperTabItem>
        <div class="mb-8 px-2">
            <MSubheader Class="px-0">
                @(DateTime.Now.ToString("yyyy/MM/dd") + " " + DateTime.Now.DayOfWeek.ToChinese2())
            </MSubheader>

            <h3>早上好，又是全新的一天</h3>
        </div>

        <DiaryCardList Value="Diaries">

        </DiaryCardList>

        <div class="py-10">
        </div>
    </SwiperTabItem>
    <SwiperTabItem>
        <div class="d-flex justify-space-between flex-wrap">
            @foreach (var item in Tags)
            {
                <MCard Class="mb-5 tag-card"
                   Rounded="@("lg")">
                    <MListItem>
                        <MListItemIcon>
                            <MIcon>
                                mdi-tag
                            </MIcon>
                        </MListItemIcon>

                        <MListItemContent>
                            @item.Name
                        </MListItemContent>

                        <MListItemAction>
                            <MIcon>mdi-pencil</MIcon>
                        </MListItemAction>
                    </MListItem>
                </MCard>
            }
        </div>
    </SwiperTabItem>
</SwiperTabItems>

<FabTransition>
    <MButton Color="black"
             Class="mb-15 mb-sm-0"
             Dark
             Bottom
             Right
             Fixed
             Href="/Write"
             Fab>
        <MIcon>
            mdi-pencil
        </MIcon>
    </MButton>
</FabTransition>
