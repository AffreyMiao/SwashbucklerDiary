@page "/about"
@inherits PageComponentBase

<MAppBar App
         Color="white"
         Elevation="0">
    <MButton Icon OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MAppBarTitle Class="font-weight-bold">
        @(I18n!.T("Mine.About"))
    </MAppBarTitle>

    <MSpacer></MSpacer>
</MAppBar>

<MContainer>
    <MCard Class="mb-5 py-sm-3"
           Elevation="4"
           Rounded="@("lg")">
        <MList>
            <MListItem>
                <MListItemAvatar Rounded="@("lg")" Size="75">
                    <MImage Src="./logo/logo.svg"></MImage>
                </MListItemAvatar>
                <MListItemContent>
                    <MListItemTitle Class="text-h6 font-weight-bold">
                        @(I18n!.T("AppName"))
                    </MListItemTitle>
                    <MListItemSubtitle>
                        version @(SystemService.GetAppVersion())
                    </MListItemSubtitle>
                </MListItemContent>
            </MListItem>
        </MList>
    </MCard>
    <MCard Class="mb-5"
           Elevation="4"
           Rounded="@("lg")">
        <MList>
            <MListItem OnClick="()=>ShowSourceCode=true">
                <MListItemIcon>
                    <MIcon Class="list-item-icon">
                        mdi-book-open-page-variant-outline
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n!.T("About.SourceCode"))
                </MListItemContent>
                <MListItemAction>
                    <MIcon>mdi-chevron-right</MIcon>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-3 mx-sm-0"></MDivider>
            <MListItem OnClick="NavigateToUserAgreement">
                <MListItemIcon>
                    <MIcon Class="list-item-icon">
                        mdi-file-document-multiple-outline
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n!.T("About.Agreement"))
                </MListItemContent>
                <MListItemAction>
                    <MIcon>mdi-chevron-right</MIcon>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-3 mx-sm-0"></MDivider>

            <MListItem OnClick="NavigateToPrivacyPolicy">
                <MListItemIcon>
                    <MIcon Class="list-item-icon">
                        mdi-lock-outline
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n!.T("About.Privacy"))
                </MListItemContent>
                <MListItemAction>
                    <MIcon>mdi-chevron-right</MIcon>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-3 mx-sm-0"></MDivider>
            <MListItem OnClick="ToDo">
                <MListItemIcon>
                    <MIcon Class="list-item-icon">
                        mdi-update
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n!.T("About.UpdateLog"))
                </MListItemContent>
                <MListItemAction>
                    <MIcon>mdi-chevron-right</MIcon>
                </MListItemAction>
            </MListItem>
        </MList>
    </MCard>

    <MCard Class="mb-5"
           Elevation="4"
           Rounded="@("lg")">
        <MList>
            <MListItem OnClick="ToDo">
                <MListItemIcon>
                    <MIcon Class="list-item-icon">
                        mdi-star-outline
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n!.T("About.Evaluation"))
                </MListItemContent>
                <MListItemAction>
                    <MIcon>mdi-chevron-right</MIcon>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-3 mx-sm-0"></MDivider>
            <MListItem OnClick="NavigateToRelatedOSP">
                <MListItemIcon>
                    <MIcon Class="list-item-icon">
                        mdi-xml
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n!.T("About.Related"))
                </MListItemContent>
                <MListItemAction>
                    <MIcon>mdi-chevron-right</MIcon>
                </MListItemAction>
            </MListItem>
        </MList>
    </MCard>
</MContainer>

<MyDialog MaxWidth="420"
          @bind-MyValue="ShowSourceCode">
    <MCard>
        <MCardTitle Class="font-weight-bold">
            @(I18n!.T("About.SourceCode"))
            <MSpacer></MSpacer>
            <MButton Icon OnClick="()=>ShowSourceCode=false">
                <MIcon>mdi-close</MIcon>
            </MButton>
        </MCardTitle>
        <MCardText>
            @foreach (var item in CodeSources)
            {
                <MListItem OnClick="()=>OpenBrowser(item.Url!)">
                    <MListItemIcon>
                        <MIcon Class="list-item-icon">
                            @(item.Icon)
                        </MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle>
                            @(item.Name)
                        </MListItemTitle>
                    </MListItemContent>
                </MListItem>
            }
        </MCardText>
    </MCard>
</MyDialog>