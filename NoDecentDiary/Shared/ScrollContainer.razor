<MSheet Id="@Id"
        Class="overflow-y-auto"
        MaxHeight="@MaxHeight">
    @ChildContent
</MSheet>

@code {
    [Inject]
    public MasaBlazor? MasaBlazor { get; set; }
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public string? Id { get; set; }
    private double MaxHeight => MasaBlazor!.Breakpoint.Height - MasaBlazor.Application.Top - MasaBlazor.Application.Bottom;
}