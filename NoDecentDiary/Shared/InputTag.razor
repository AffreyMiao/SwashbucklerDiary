<MDialog Value="Value"
         ValueChanged="InternalValueChanged"
         MaxWidth="420">
    <MCard>
        <MCardTitle>
            @Title
            <MSpacer></MSpacer>
            <MButton Icon OnClick="HandleOnCancel">
                <MIcon>mdi-close</MIcon>
            </MButton>
        </MCardTitle>
        <MCardText Class="pb-0">
            <MTextField Value="Text"
                        ValueChanged="TextChanged"
                        Dense
                        Autofocus
                        HideDetails="@("auto")"
                        Outlined
                        Counter="20"
                        maxlength="20"
                        spellcheck="false"
                        Placeholder="请输入标签名称">
            </MTextField>
        </MCardText>
        <MCardActions>
            <MSpacer></MSpacer>
            <MButton Text OnClick="HandleOnCancel">
                取消
            </MButton>
            <MButton Text
                     Color="primary"
                     OnClick="HandleOnSave">
                保存
            </MButton>
        </MCardActions>
    </MCard>
</MDialog>