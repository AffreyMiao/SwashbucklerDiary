@inherits MyComponentBase

<MDialog Value="Value"
         ValueChanged="InternalValueChanged"
         MaxWidth="420">
    <MCard>
        <MCardTitle>
            @Title
            <MSpacer></MSpacer>
            <MButton Icon OnClick="HandleOnCancel">
                <MIcon>mdi-close</MIcon>
            </MButton>
        </MCardTitle>
        <MCardText Class="pb-0">
            <MTextField Value="Text"
                        ValueChanged="TextChanged"
                        Dense
                        Autofocus
                        HideDetails="@("auto")"
                        Outlined
                        Counter="20"
                        maxlength="20"
                        spellcheck="false"
                        Placeholder="@(I18n!.T("Tag.Placeholder"))">
            </MTextField>
        </MCardText>
        <MCardActions>
            <MSpacer></MSpacer>
            <MButton Text OnClick="HandleOnCancel">
                @(I18n!.T("Share.Cancel"))
            </MButton>
            <MButton Text
                     Color="primary"
                     OnClick="HandleOnSave">
                @(I18n!.T("Share.Save"))
            </MButton>
        </MCardActions>
    </MCard>
</MDialog>